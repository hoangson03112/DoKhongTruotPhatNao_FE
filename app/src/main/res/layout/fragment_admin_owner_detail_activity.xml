<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB"
    android:padding="16dp">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_logout"
        android:contentDescription="Quay lại"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi Tiết Chủ Bãi Đỗ Xe"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Thông tin chủ bãi -->
        <TextView
            android:id="@+id/txt_owner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/txt_owner_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/txt_owner_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SĐT:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/txt_owner_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/txt_owner_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái xác minh:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="16dp" />

        <!-- Ảnh xác minh (3 ảnh liên tiếp) -->
        <ImageView
            android:id="@+id/img_owner_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/img_owner_2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/img_owner_3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
