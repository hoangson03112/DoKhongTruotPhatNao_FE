<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F9FB">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nút quay lại -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_logout"
            android:contentDescription="Back"
            android:tint="#000000"
            android:layout_marginBottom="12dp"/>


        <!-- Ảnh chính bãi đỗ -->
        <ImageView
            android:id="@+id/ivDetailImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Ảnh bãi đỗ" />

        <!-- Thông tin bãi đỗ -->
        <TextView
            android:id="@+id/tvDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên bãi đỗ"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvDetailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvDetailPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📞 Số điện thoại chủ bãi"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvDetailStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái: "
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Nút mở bản đồ -->
        <Button
            android:id="@+id/btnOpenMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🗺️ Mở bản đồ"
            android:layout_marginTop="12dp"
            android:backgroundTint="#3F51B5"
            android:textColor="#ffffff" />

        <!-- Ảnh phụ -->
        <LinearLayout
            android:id="@+id/layoutAllImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp" />

        <!-- Thông tin chủ bãi -->
        <TextView
            android:id="@+id/tvOwnerHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👤 Thông tin chủ bãi"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#222222"
            android:layout_marginTop="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="4dp"
            android:elevation="4dp"
            android:background="@android:color/white"
            android:padding="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👤 Họ tên: "
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvOwnerUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👤 Username: "
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvOwnerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📧 Email: "
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvOwnerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📞 Điện thoại: "
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvOwnerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔒 Xác minh: "
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/ivOwnerVerification"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Ảnh xác minh"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
