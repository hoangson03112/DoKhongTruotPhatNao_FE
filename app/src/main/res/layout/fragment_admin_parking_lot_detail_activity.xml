<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FB"
    tools:context=".fragments.AdminParkingLotDetailActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:titleTextColor="#FFFFFF" />

    <!-- Nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivDetailImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@color/black"
                android:contentDescription="Ảnh chính" />

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên bãi đỗ"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#222222"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvDetailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvDetailPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📞 Số điện thoại"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvDetailStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trạng thái: active"
                android:textSize="16sp"
                android:textColor="#007E33"
                android:layout_marginTop="8dp" />

            <!-- Nút mở bản đồ -->
            <Button
                android:id="@+id/btnOpenMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🗺️ Mở bản đồ"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white" />

            <!-- Ảnh phụ hiển thị động -->
            <LinearLayout
                android:id="@+id/layoutAllImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
